{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "skipLibCheck": true,
    }
  },
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "build",
    "noEmit": true
  }
}